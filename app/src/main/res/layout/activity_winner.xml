<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.armadillo.team.sunkagame.WinnerActivity"
    android:background="@drawable/backgroud1">

    <ImageView
        android:layout_width="495dp"
        android:layout_height="295dp"
        android:id="@+id/gameOver"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/go"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Back"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/store"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="go_back"
        />

    <TextView
        android:layout_width="437dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The winner is :"
        android:id="@+id/winner"
        android:layout_gravity="left|center_vertical"
        android:textColor="#ffffff"
        android:textSize="50dp"
        android:layout_alignBottom="@+id/gameOver"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <TextView
        android:layout_width="437dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/winnerName"
        android:layout_alignTop="@+id/winner"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"
        android:textColor="#ffffff"
        android:textSize="50dp" />

</RelativeLayout>
